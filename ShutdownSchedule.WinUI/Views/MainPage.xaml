<?xml version="1.0" encoding="UTF-8" ?>
<Page
        x:Class="ShutdownSchedule.WinUI.Views.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">
        <Grid x:Name="RootGrid"
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Margin="24,20,24,12"
                            Spacing="4">
                        <TextBlock Text="Shutdown Scheduler"
                                   FontSize="30"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Plan shutdowns, control power actions, and keep an eye on activity."
                                   FontSize="14"
                                   Opacity="0.82"/>
                </StackPanel>

                <Border Grid.Row="1"
                        Margin="24,0,24,16"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="12"
                        Padding="16">
                        <TextBlock x:Name="StatusTextBlock"
                                   Text="No shutdown scheduled."
                                   FontSize="16"/>
                </Border>

                <Grid Grid.Row="2"
                      Margin="24"
                      ColumnSpacing="24"
                      RowSpacing="24">
                        <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0"
                                    Grid.Column="0"
                                    Spacing="12">
                                <TextBlock Text="Schedule shutdown"
                                           FontSize="18"
                                           FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal"
                                            Spacing="12">
                                        <DatePicker x:Name="DatePickerSchedule"
                                                    Width="220"/>
                                        <TimePicker x:Name="TimePickerSchedule"
                                                    Width="180"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Spacing="12">
                                        <Button x:Name="ScheduleButton"
                                                Content="Schedule"
                                                Click="OnScheduleClicked"
                                                Style="{StaticResource AccentButtonStyle}"/>
                                        <Button x:Name="CancelButton"
                                                Content="Cancel"
                                                Click="OnCancelClicked"/>
                                </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Row="0"
                                    Grid.Column="1"
                                    Spacing="12">
                                <TextBlock Text="Quick actions"
                                           FontSize="18"
                                           FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal"
                                            Spacing="12">
                                        <Button Content="Shutdown Now"
                                                Click="OnShutdownNowClicked"/>
                                        <Button Content="Restart Now"
                                                Click="OnRestartNowClicked"/>
                                        <Button Content="Log Off"
                                                Click="OnLogOffClicked"/>
                                        <Button Content="Hibernate"
                                                Click="OnHibernateClicked"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Spacing="12">
                                        <Button Content="Set Password"
                                                Click="OnSetPasswordClicked"/>
                                        <Button x:Name="ThemeToggleButton"
                                                Content="Switch Theme"
                                                Click="OnThemeToggleClicked"/>
                                </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Spacing="12">
                                <TextBlock Text="Recent activity"
                                           FontSize="18"
                                           FontWeight="SemiBold"/>
                                <ListView x:Name="LogListView"
                                          Height="180"
                                          SelectionMode="None">
                                        <ListView.ItemTemplate>
                                                <DataTemplate>
                                                        <TextBlock Text="{Binding}"/>
                                                </DataTemplate>
                                        </ListView.ItemTemplate>
                                </ListView>
                        </StackPanel>
                </Grid>
        </Grid>
</Page>
